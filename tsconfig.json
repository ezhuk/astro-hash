{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "declaration": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
